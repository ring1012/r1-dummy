<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/holo_blue_light"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/bt_test_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="测试用例界面"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/bt_playOrPause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="播放"
        android:layout_centerInParent="true"/>
    <Button
        android:id="@+id/bt_prev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="80dp"
        android:text="上一首"
        android:layout_alignRight="@+id/bt_playOrPause"
        android:layout_centerVertical="true"/>
    <Button
        android:id="@+id/bt_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:text="下一首"
        android:layout_alignLeft="@+id/bt_playOrPause"
        android:layout_centerVertical="true"/>
    <Button
        android:id="@+id/bt_conectnet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="联网"
        android:layout_below="@+id/bt_playOrPause"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/bt_forbiden_mic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="禁用Mic"
        android:layout_above="@+id/bt_playOrPause"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
